# Project Configuration
PROJECT_NAME=floorplan-classifier
PROJECT_VERSION=0.1.0

# Dataset Configuration
DATASET_PATH=./data
CUBICASA_URL=https://zenodo.org/record/2613616/files/cubicasa5k.zip
DATASET_SPLIT_RATIO=0.7,0.15,0.15

# Model Configuration
MODEL_NAME=vit-small-segmentation
PRETRAINED_MODEL=facebook/deit-small-patch16-224
NUM_CLASSES=34
IMAGE_SIZE=512
PATCH_SIZE=16

# Training Configuration
BATCH_SIZE=8
NUM_EPOCHS=50
LEARNING_RATE=1e-4
WEIGHT_DECAY=1e-5
WARMUP_STEPS=500

# GPU Configuration
DEVICE=cuda
NUM_WORKERS=4
MIXED_PRECISION=True

# MLFlow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=floorplan-vit-experiments

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=./logs
LOG_FREQUENCY=10